<!--  Portfolio Start  -->
<section id="portfolio" class="section pp-scrollable portfolio">
    <div class="display-table">
        <div class="display-content">
            <div class="container">
                <div class="row">
                    <div class="title-small">
                        <p class="text-dark">Portfolio</p>
                    </div>
                    <div class="col-lg-12">
                        <div class="text-left">
                            <h2 class="text-dark mb-3">Creative <span class="base-color">Works</span></h2>
                            <p class="text-muted">Meet My Awesome Works and Enjoy</p>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <!--   Portfolio Filters   -->
                    <ul id="portfolio-filter"
                        class="list-unstyled list-inline mb-0 col-lg-12 text-left portfolio-filter">
                        <li class="list-inline-item">
                            <a href="javascript:;" data-filter="*" class="active my-1">All</a>
                        </li>
                        <li class="list-inline-item">
                            <a href="javascript:;" data-filter=".web" class="my-1">Web Development</a>
                        </li>
                        <li class="list-inline-item">
                            <a href="javascript:;" data-filter=".hybrid" class="my-1">Hybrid Mobile App Development</a>
                        </li>
                        <li class="list-inline-item">
                            <a href="javascript:;" data-filter=".nativeMobile" class="my-1">Native Mobile App Development</a>
                        </li>
                        <li class="list-inline-item">
                            <a href="javascript:;" data-filter=".blockchain" class="my-1">Blockchain Development</a>
                        </li>
                    </ul>
                </div>
                <div class="row portfolio-items">
                    <% portfolios.forEach(function(portfolio) { 
                        const img = portfolio.images.split(',')[0];
                        const title = portfolio.title;
                        const projectName = portfolio.project_name;
                        const category = portfolio.category;
                        %>
                        <div class="col-lg-4 col-md-6 portfolio-item my-3 <%= category %>">
                            <div class="portfolio-item-content rounded" data-toggle="modal"
                            data-target="#portfolio-<%= projectName %>">
                                <img src="/img/portfolio/<%= img %>" alt="<%= projectName %>">
                                <div class="img-overlay text-center">
                                    <div class="img-overlay-content">
                                        <h5 class="text-white"><%= title %></h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</section>
<!--   Portfolio End   -->