<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="pilling-page" data-spy="scroll" data-target="#scrollspy" data-offset="1">
    <!--  Pre Loader  -->
    <div id="overlayer">
        <span class="spinner-grow spinner-grow-lg loader" role="status" aria-hidden="true"></span>
    </div>

    <!--  Page Pilling  Strat  -->
    <div id="pagepiling" class="pagepiling">
        <%- include('../partials/home/header'); %>

        <%- include('../partials/home/overlay'); %>

        <%- include('../partials/home/home'); %>

        <%- include('../partials/home/about'); %>

        <%- include('../partials/home/resume'); %>

        <%- include('../partials/home/services'); %>

        <%- include('../partials/home/portfolio'); %>

        <%- include('../partials/home/contact'); %>

        <!--   Color Scheme  -->
        <a class="color-scheme text-white bg-base-color d-inline-block" href="javascript:void(0)"><i
                class="lni-night"></i></a>
        <a class="color-scheme color-scheme-light text-white bg-base-color d-none" href="javascript:void(0)"><i
                class="lni-sun"></i></a>

        <% portfolios.forEach(function(portfolio) { 
            const imgs = portfolio.images.split(',');
            const title = portfolio.title;
            const projectName = portfolio.project_name;
            const summary = portfolio.summary;
            const skills = portfolio.skills;
            const link = portfolio.links;
            const desc = portfolio.desc;
            %>
        <div class="portfolio-single modal fade" id="portfolio-<%= projectName %>" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-dialog-scrollable" role="document">
                <div class="modal-content bg-white">
                    <div class="modal-header">
                        <h5 class="modal-title">Portfolio</h5>
                        <button type="button" class="close text-muted" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="pt-3 pb-4">
                            <div class="container">
                                <div class="row">
                                    <div class="col-12 col-md-10 offset-md-1">
                                        <div class="text-center">
                                            <h2 class="text-dark mb-2"><span class="base-color"><%= title %></h2>
                                            <p class="text-left text-muted"><%= summary %></p>
                                        </div>
                                        <% if(desc) { 
                                            const descs = desc.split("<next>");
                                            %>
                                            <div class="contact-info mt-3">
                                                <h6>Description:</h6>
                                                <% descs.forEach(eachDesc => {  %>
                                                    <p class="text-muted mb-0">&bull; <%= eachDesc %></p>
                                                <% }) %>
                                            </div>
                                        <% } %>
                                        <div class="contact-info mt-3">
                                            <h6>Skills:</h6>
                                            <p class="text-muted mb-0"><%= skills %></p>
                                        </div>

                                        <% if(link) { 
                                            const links = link.split("<next>");
                                            %>
                                            <div class="contact-info mt-3">
                                                <h6>Link:</h6>
                                                <% links.forEach(eachLink => {  %>
                                                    <a href="<%= eachLink%>"><%= eachLink%></a>
                                                <% }) %>
                                            </div>
                                        <% } %>

                                        <div class="mt-4">
                                            <div class="portfolio-single-item">
                                                <div id="<%= projectName %>Carousel" class="carousel slide" data-ride="carousel">
                                                    <div class="carousel-inner">
                                                        <% imgs.forEach((eachImg, index) => { %>
                                                            <div class="carousel-item <% if(index == 0) { %> active <% }%>">
                                                                <img class="d-block w-100 slider-img" src="/img/portfolio/<%= eachImg %>"  alt="<%= title %>">
                                                                </div>
                                                        <% }); %>
                                                    </div>
                                                    <a class="carousel-control-prev" href="#<%= projectName %>Carousel" role="button" data-slide="prev">
                                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                        <span class="sr-only">Previous</span>
                                                    </a>
                                                    <a class="carousel-control-next" href="#<%= projectName %>Carousel" role="button" data-slide="next">
                                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                        <span class="sr-only">Next</span>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% }); %>
    </div>

    <%- include('../partials/footer'); %>
</body>

</html>